<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<Pane fx:id="pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.controller.ModifyCategoryController">
   <children>
      <VBox alignment="CENTER" prefHeight="250.0" prefWidth="600.0" spacing="50.0">
         <children>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name" />
                        <TextField fx:id="nameText" prefHeight="25.0" prefWidth="232.0" />
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  <ColorPicker fx:id="colorPicker" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description" />
                  <TextField fx:id="descriptionText" prefHeight="25.0" prefWidth="425.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#acceptAction" prefHeight="25.0" prefWidth="52.0" text="Save" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>

   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Text>
      <VBox alignment="CENTER" prefHeight="146.0" prefWidth="373.0">
         <children>
            <HBox alignment="CENTER" prefHeight="49.0" prefWidth="373.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username: " />
                  <TextField fx:id="username" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="373.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password: " />
                    <TextField fx:id="password" onAction="#passwordInput" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="51.0" prefWidth="213.0">
               <children>
                    <Button fx:id="buttonClick" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#pressLogin" prefWidth="80.0" stylesheets="@../estilos.css" text="Log In" />
